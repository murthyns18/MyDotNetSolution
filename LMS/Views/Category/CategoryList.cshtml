@{
    ViewData["Title"] = "Category List";
}

<div class="container-fluid mt-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Category List</h4>

        <div class="d-flex align-items-center gap-2">
            <button type="button"
                    class="btn-excel"
                    id="excelDownload"
                    data-grid="categoryGrid"
                    data-file="CategoryList"
                    title="Excel Download">
                <img src="~/assets/images/icons/excel.png" class="excel-icon" />
                <i class="bi bi-download"></i>
            </button>

            <button class="btn btn-primary" onclick="openAddCategoryModal()">
                Add Category
            </button>
        </div>
    </div>

    <table id="categoryGrid"></table>
    <div id="categoryPager"></div>
</div>

<form method="post">
    @Html.AntiForgeryToken()
</form>

@await Html.PartialAsync("_CategoryModal", new LMS.Models.Category())

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/categoryList.min.js"></script>
}
