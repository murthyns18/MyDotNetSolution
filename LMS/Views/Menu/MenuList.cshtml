@{
    ViewData["Title"] = "Menu Master";
}

@Html.AntiForgeryToken()

<div class="container-fluid px-2">

    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">Menu List</h4>

        <div class="d-flex align-items-center gap-2">
            <button type="button"
                    class="btn-excel"
                    id="excelDownload"
                    data-grid="menuGrid"
                    data-file="MenuMaster"
                    title="Excel Download">
                <img src="~/assets/images/icons/excel.png" class="excel-icon" />
                <i class="bi bi-download"></i>
            </button>

            <button type="button"
                    class="btn btn-sm btn-primary btn-menu"
                    onclick="openAddMenuModal()">
                Add Menu
            </button>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-1">
            <table id="menuGrid"></table>
            <div id="menuPager"></div>
        </div>
    </div>

</div>

@await Html.PartialAsync("_MenuModal", new LMS.Models.MenuMaster())

@section Scripts {
    <script src="~/js/menuList.min.js"></script>
}
