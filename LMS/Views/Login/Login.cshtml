@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMS</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/login.css" />

    <!-- jQuery Validation -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</head>

<body>

    <div class="login-card text-center">

        <div class="avatar mb-3">
            <i class="bi bi-person"></i>
        </div>

        <h5 class="mb-4">Sign in</h5>

        @if (TempData["Message"] != null)
        {
            <div class="alert @TempData["Messageclass"]">
                @TempData["Message"]
            </div>
        }

        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="floating-group">
                @Html.TextBoxFor(m => m.Email, new {
                @class = "floating-input",
                        placeholder = " "
                        })
            <label>Email</label>
            <i class="bi bi-envelope input-icon"></i>
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
        </div>

        <div class="floating-group">
            @Html.PasswordFor(m => m.Password, new {
                        @class = "floating-input",
                        placeholder = " "
                        })
            <label>Password</label>
            <i class="bi bi-lock input-icon"></i>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
        </div>

        <button type="submit" class="btn btn-primary w-100 btn-login">
            Login
        </button>
                }

    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
