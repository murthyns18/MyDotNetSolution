@model LMS.Models.Publisher

<div class="modal fade" id="publisherModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">

            <form id="publisherForm" method="post" action="/Publisher/AddPublisher">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.PublisherID, new { id = "PublisherID" })

                <div class="modal-header bg-primary text-white py-2">
                    <h6 class="modal-title" id="publisherModalTitle">Add Publisher</h6>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body py-2">

                    <div class="mb-2">
                        @Html.LabelFor(m => m.PublisherName, new { @class = "form-label small mb-1" }) <span class="text-danger">*</span>
                        @Html.TextBoxFor(m => m.PublisherName, new { @class = "form-control form-control-sm", id = "PublisherName" })
                        <span asp-validation-for="PublisherName" class="text-danger small"></span>
                    </div>

                    <div class="mb-2 d-none small" id="statusContainer">
                        <label class="form-label mb-1">Status</label><br />
                        <input type="radio" name="IsActive" value="true" /> Active
                        <input type="radio" name="IsActive" value="false" class="ms-3" /> Inactive
                    </div>

                </div>

                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                </div>

            </form>

        </div>
    </div>
</div>
