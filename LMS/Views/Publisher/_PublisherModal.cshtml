@model LMS.Models.Publisher

<div class="modal fade" id="publisherModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">

            <form id="publisherForm" method="post" action="/Publisher/AddPublisher">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.PublisherID, new { id = "PublisherID" })

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="publisherModalTitle">Add Publisher</h5>
                    <button type="button" class="btn-close btn-close-white"
                            data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <div class="mb-3">
                        @Html.LabelFor(m => m.PublisherName)
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(m => m.PublisherName,
                        new { @class = "form-control", id = "PublisherName" })
                        <span asp-validation-for="PublisherName" class="text-danger"></span>
                    </div>

                    <!-- STATUS (EDIT ONLY) -->
                    <div class="mb-3 d-none" id="statusContainer">
                        <label>Status</label><br />
                        <input type="radio" name="IsActive" value="true" /> Active
                        <input type="radio" name="IsActive" value="false" class="ms-3" /> Inactive
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit"
                            class="btn btn-primary">
                        Submit
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
