@model LMS.Models.User

<div class="modal fade" id="userModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <form id="userForm" method="post" action="/User/AddUser">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.UserID)

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="userModalTitle">Add User</h5>
                    <button type="button"
                            class="btn-close btn-close-white"
                            data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly"
                         class="text-danger mb-2"></div>

                    <div class="row">

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.UserName)
                            <span class="text-danger">*</span>
                            @Html.TextBoxFor(m => m.UserName,
                            new { @class = "form-control", id = "UserName" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.Email)
                            <span class="text-danger">*</span>
                            @Html.TextBoxFor(m => m.Email,
                                                        new { @class = "form-control", id = "Email" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.MobileNumber)
                            <span class="text-danger">*</span>
                            @Html.TextBoxFor(m => m.MobileNumber,
                                                        new { @class = "form-control", id = "MobileNumber" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.RoleID)
                            <span class="text-danger">*</span>
                            @Html.DropDownListFor(
                                                        m => m.RoleID,
                                                        Model.RoleList,
                                                        "-- Select Role --",
                                                        new { @class = "form-control", id = "RoleID" })
                        </div>

                        <div class="col-md-12 mb-3">
                            @Html.LabelFor(m => m.Address)
                            <span class="text-danger">*</span>
                            @Html.TextAreaFor(m => m.Address,
                                                        new { @class = "form-control", rows = 2, id = "Address" })
                        </div>

                        <!-- Password : ADD ONLY -->
                        <div class="col-md-6 mb-3 password-fields">
                            @Html.LabelFor(m => m.Password)
                            <span class="text-danger">*</span>
                            @Html.PasswordFor(m => m.Password,
                                                        new { @class = "form-control", id = "Password" })
                        </div>

                        <div class="col-md-6 mb-3 password-fields">
                            @Html.LabelFor(m => m.ConfirmPassword)
                            <span class="text-danger">*</span>
                            @Html.PasswordFor(m => m.ConfirmPassword,
                                                        new { @class = "form-control", id = "ConfirmPassword" })
                        </div>

                        <!-- Status : EDIT ONLY -->
                        <div class="col-md-6 mb-3 d-none" id="userStatusContainer">
                            @Html.LabelFor(m => m.Status)
                            <div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input"
                                           type="radio"
                                           name="Status"
                                           id="UserActive"
                                           value="true" />
                                    <label class="form-check-label">Active</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input"
                                           type="radio"
                                           name="Status"
                                           id="UserInactive"
                                           value="false" />
                                    <label class="form-check-label">Inactive</label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit"
                            class="btn btn-primary">
                        Submit
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
