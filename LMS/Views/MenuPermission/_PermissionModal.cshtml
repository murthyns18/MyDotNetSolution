@model LMS.Models.MenuPermission

<div class="modal fade" id="menuPermissionModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">

            <form id="menuPermissionForm" method="post" action="/MenuPermission/SavePermission">
                @Html.AntiForgeryToken()

                <div class="modal-header bg-primary text-white py-2">
                    <h6 class="modal-title" id="menuPermissionModalTitle">Add Menu Permission</h6>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body py-2">
                    <div class="row g-2">

                        <div class="col-12">
                            <label class="form-label small mb-1">
                                Menu Permission ID <span class="text-danger fw-bold ms-1">*</span>
                            </label>
                            <input asp-for="MenuRolePermissionID" type="text" class="form-control form-control-sm" />
                            <span asp-validation-for="MenuRolePermissionID" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label small mb-1">
                                Menu <span class="text-danger fw-bold ms-1">*</span>
                            </label>
                            <select asp-for="MenuId" class="form-select form-select-sm" id="MenuId">
                                <option value="0">-- Select Menu --</option>
                            </select>
                            <span asp-validation-for="MenuId" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label small mb-1">
                                Role <span class="text-danger fw-bold ms-1">*</span>
                            </label>
                            <select asp-for="RoleID" class="form-select form-select-sm" id="RoleID">
                                <option value="0">-- Select Role --</option>
                            </select>
                            <span asp-validation-for="RoleID" class="text-danger small"></span>
                        </div>

                        <div class="col-12 mt-2">
                            <div class="form-check">
                                <input asp-for="IsRead" class="form-check-input" type="checkbox" id="IsRead" />
                                <label class="form-check-label" for="IsRead">Read Permission</label>
                            </div>

                            <div class="form-check mt-1">
                                <input asp-for="IsWrite" class="form-check-input" type="checkbox" id="IsWrite" />
                                <label class="form-check-label" for="IsWrite">Write Permission</label>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-sm">Save</button>
                </div>

            </form>

        </div>
    </div>
</div>
