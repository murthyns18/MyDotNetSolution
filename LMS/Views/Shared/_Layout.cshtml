@{
    @inject IConfiguration configuration
    var apiURL = Convert.ToString(configuration.GetSection("API")["URL"]);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMS</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMS.styles.css" asp-append-version="true" />
    <script>
        var ROOT='@Url.Content("~/")';
        var APIURL='@apiURL';
    </script>
    <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-3">
            <div class="container-fluid">

                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Library Management System
                </a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarContent" aria-controls="navbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="ListUser">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="BookList">Books</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>

    </header>
    <div class="container">
        <!-- Notification Message -->
        @if (TempData["Message"] != null)
        {
            var type = TempData["Type"] ?? "success";
            <div id="notification" class="alert alert-@type text-center mx-auto" style="width:300px; margin-bottom:10px;">
                @Convert.ToString(TempData["Message"])
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - LMS-NS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
   
    @* <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script> *@
    <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.bundle.min.js")"></script> 
    <script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>

    
    <script src="@Url.Content("~/js/book.js")" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
