@model IList<LMS_API.Models.Role>

<div class="container mt-4">

    <div class="d-flex align-items-center mb-3 justify-content-between">
        <h4>Role List</h4>
        <div>
            <a href="@Url.Content("~/Role/ClearAll")" class="btn btn-danger text-white">
                Clear All
            </a>
            <a href="@Url.Content("~/Role/AddRole")" class="btn btn-primary">
                Add Role
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Action</th>
                    <th>Sl.No</th>
                    <th>Role Name</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <a href="@Url.Action("EditRole", "Role", new { id = role.RoleID })"
                                   class="btn btn-sm btn-info text-light me-1">Edit</a>

                                <form asp-action="DeleteRole" method="post" class="d-inline">
                                    <input type="hidden" name="roleID" value="@role.RoleID" />
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>

                            <td>@role.RoleID</td>
                            <td>@role.RoleName</td>
                            <td class="text-center">
                                <span class="badge @(role.IsActive ? "bg-success" : "bg-danger")">
                                    @(role.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-danger">No roles available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
