<div class="container-fluid mt-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Role List</h4>

        <div class="d-flex align-items-center gap-2">
            <button type="button"
                    class="btn-excel"
                    id="excelDownload"
                    data-grid="roleGrid"
                    data-file="RoleList"
                    title="Excel Download">
                <img src="~/assets/images/icons/excel.png" class="excel-icon" />
                <i class="bi bi-download"></i>
            </button>

            <button class="btn btn-primary" onclick="openAddRoleModal()">
                Add Role
            </button>
        </div>
    </div>

    <table id="roleGrid"></table>
    <div id="rolePager"></div>
</div>

<form method="post">
    @Html.AntiForgeryToken()
</form>

@await Html.PartialAsync("_RoleModal", new LMS_API.Models.Role())

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/roleList.js"></script>
}
