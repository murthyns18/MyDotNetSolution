@model LMS_API.Models.Role

<div class="modal fade" id="roleModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">

            <form id="roleForm" method="post" action="/Role/AddRole">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.RoleID, new { id = "RoleID" })

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="roleModalTitle">Add Role</h5>
                    <button type="button" class="btn-close btn-close-white"
                            data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <div class="mb-3">
                        @Html.LabelFor(m => m.RoleName)
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(m => m.RoleName,
                        new { @class = "form-control", id = "RoleName" })
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>

                 
                    <div class="mb-3 d-none" id="statusContainer">
                        <label>Status</label><br />
                        <input type="radio" name="IsActive" value="true" /> Active
                        <input type="radio" name="IsActive" value="false" class="ms-3" /> Inactive
                    </div>


                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit"
                            class="btn btn-primary">
                        Submit
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
