@model LMS.Models.LoanDetailsVM

<table class="table table-bordered table-sm">
    <tr><th>Loan ID</th><td>@Model.Header.LoanId</td></tr>
    <tr><th>Borrower</th><td>@Model.Header.BorrowerName</td></tr>
    <tr><th>Loan Date</th><td>@Model.Header.LoanDate.ToString("dd-MM-yyyy")</td></tr>
    <tr><th>Due Date</th><td>@Model.Header.DueDate?.ToString("dd-MM-yyyy")</td></tr>
    <tr>
        <th>Status</th>
        <td>
            @if (Model.Header.ReturnDate != null)
            {
                <span class="badge bg-secondary">Returned</span>
            }
            else if (Model.Header.DueDate < DateTime.Today)
            {
                <span class="badge bg-danger">Overdue</span>
            }
            else
            {
                <span class="badge bg-success">Active</span>
            }
        </td>
    </tr>
</table>

<h6>Books</h6>

<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Book Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.Details)
        {
            <tr>
                <td>@b.BookId</td>
                <td>@b.BookTitle</td>
            </tr>
        }
    </tbody>
</table>
