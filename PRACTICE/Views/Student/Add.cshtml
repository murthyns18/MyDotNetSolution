@model PRACTICE.Models.Student

@{
    ViewData["Title"] = "Add Student";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h5>Add Student</h5>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            @Html.LabelFor(m => m.StudentID, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.StudentID, new
                            {
                                @class = "form-control",
                                                placeholder = "Enter Student ID"
                                                })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.StudentName, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.StudentName, new
                                                {
                                @class = "form-control",
                                                placeholder = "Enter Student Name"
                                                })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.StudentCourse, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.StudentCourse, new
                                                {
                                @class = "form-control",
                                                placeholder = "Enter Course"
                                                })
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary me-2">
                            Submit
                        </button>
                        <button type="reset" class="btn btn-secondary">
                            Clear
                        </button>
                    </div>
                                        }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
